{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.RateLimiting": "Information"
    },
    "LogRequestBody": true,
    "LogResponseBody": false,
    "IncludeDetailedErrors": false
  },
  "AllowedHosts": "*",
  "ApiVersioning": {
    "DefaultVersion": "1.0",
    "SupportedVersions": ["1.0", "2.0"],
    "DeprecatedVersions": ["1.5"],
    "VersioningStrategy": "UrlPath"
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowMinutes": 1,
    "QueueLimit": 10
  },
  "Cors": {
    "AllowedOrigins": ["*"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"]
  },
  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health",
    "TimeoutSeconds": 30
  },
  "Swagger": {
    "Enabled": true,
    "Title": "FMS API",
    "Description": "Fleet Management System API with comprehensive versioning and monitoring",
    "Contact": {
      "Name": "FMS Development Team",
      "Email": "fms-dev@bharuwa.com"
    },
    "License": {
      "Name": "MIT",
      "Url": "https://opensource.org/licenses/MIT"
    }
  },
  "Monitoring": {
    "EnableRequestLogging": true,
    "EnablePerformanceMetrics": true,
    "EnableErrorTracking": true,
    "LogLevel": "Information"
  },
  "Security": {
    "RequireHttps": true,
    "EnableRateLimiting": true,
    "EnableCors": true,
    "AuthenticationRequired": true
  }
}